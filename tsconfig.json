{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "newLine": "LF"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "typedocOptions": {
    "name": "IXM Toolkit",
    "entryPoints": ["src/index.ts"],
    "exclude": "**/**.spec.ts",


    "out": "dist/docs",
    "hideGenerator": true
  }
}
