{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "newLine": "LF"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "dist"],
  "typedocOptions": {
    "inputFiles": ["./src/index.ts"],
    "exclude": "**/**.spec.ts",
    "mode": "modules",
    "out": "dist/docs"
  }
}
