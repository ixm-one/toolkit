{
  "name": "@ixm-one/toolkit",
  "version": "0.1.0",
  "description": "Provides a set of actions to make creating setup actions easier",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/ixm-one/toolkit#readme",
  "author": "Isabella Muerte",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "bugs": {
    "url": "https://github.com/ixm-one/toolkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ixm-one/toolkit.git"
  },
  "keywords": [
    "actions",
    "setup",
    "toolkit"
  ],
  "files": [
    "dist/*.d.ts",
    "dist/*.js"
  ],
  "scripts": {
    "build": "tsc",
    "check": "npm run build -- --noEmit && npm run lint",
    "lint": "eslint src --ext .ts",
    "build-and-check": "npm run build && npm run lint",
    "fix": "npm run check -- --fix",
    "test": "jest --coverage --detectOpenHandles",
    "docs": "typedoc"
  },
  "devDependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.1",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.1",
    "@types/eslint": "7.2.7",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.36",
    "@types/prettier": "2.2.3",
    "@types/semver": "7.3.4",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "semver": "^7.3.5",
    "ts-jest": "^26.5.4",
    "typedoc": "^0.20.33",
    "typescript": "^4.2.3"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "parser": "typescript",
    "semi": true,
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 10000,
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
