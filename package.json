{
  "name": "@ixm-one/toolkit",
  "version": "0.1.0",
  "description": "Provides a set of actions to make creating setup actions easier",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/ixm-one/toolkit#readme",
  "author": "Isabella Muerte",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "bugs": {
    "url": "https://github.com/ixm-one/toolkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ixm-one/toolkit.git"
  },
  "keywords": [
    "actions",
    "setup",
    "toolkit"
  ],
  "files": [
    "dist/*.d.ts",
    "dist/*.js"
  ],
  "scripts": {
    "build": "tsc",
    "check": "npm run build -- --noEmit && npm run lint",
    "lint": "eslint src --ext .ts",
    "build-and-check": "npm run build && npm run lint",
    "fix": "npm run check -- --fix"
  },
  "devDependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.0",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.0",
    "@types/eslint": "7.2.0",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/node": "^14.0.22",
    "@types/prettier": "2.0.2",
    "@types/semver": "7.3.3",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "semver": "^7.3.2",
    "typescript": "^3.9.7",
    "xdg-basedir": "^4.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "parser": "typescript",
    "semi": true,
    "endOfLine": "auto"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2019
    }
  }
}
